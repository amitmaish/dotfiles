;; kanata configuration for caps to esc+ctrl

(defcfg
  macos-dev-names-exclude (
    "MX Master"
		"TouchBarUserDevice"
		"Karabiner DriverKit VirtualHIDKeyboard 1.8.0"
  )
	process-unmapped-keys yes
)

(defsrc
	caps
)

(defalias
	escctrl (tap-hold-press 200 200 esc lctrl)
)

(deflayer base
	@escctrl
)
